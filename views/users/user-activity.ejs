<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Friendly</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@latest/dist/tailwind.min.css" rel="stylesheet">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Gupter:wght@400;500;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: "Gupter", serif;
            font-weight: 400;
            font-style: normal;
        }

        @media (max-width: 768px) {
            .sidebar {
                display: none;
            }

            .main-content {
                margin-left: 0;
            }
        }
        
    </style>
</head>

<body class="bg-gray-100">
    <!-- Header -->
    <div class="main-content ml-64 p-4">
        <%- include('../partials/header') %>
    </div>
    <!-- Main Content -->
    <main class="main-content ml-72 p-4">


        <!-- Sidebar -->
        <%- include('../partials/side-bar') %>
            <section class="py-8">
                <h3 class="text-2xl font-bold">Liked Posts</h3>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mt-8">

                    <% if (posts.length===0) { %>
                        <div class="flex bg-gray-100">
                            <div class="text-center p-8 bg-white rounded-lg shadow-lg">
                                <p class="text-xl font-medium text-gray-700">No photo liked yet</p>
                            </div>
                        </div>
                        <% } %>
                            <% posts.forEach(post=> { %>
                                <button>
                                    <a href="/profile/<%= post._id %>">
                                        <div
                                            class="w-full h-96 bg-gray-300 flex items-center justify-center overflow-hidden rounded">
                                            <img src="/static/images/<%= post.image %>" alt=""
                                                class="w-full h-full object-cover">
                                        </div>
                                    </a>
                                </button>

                                <% }) %>
                </div>
            </section>
    </main>

</body>

</html>