<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="csrf-token" content="<%= csrfToken %>">

    <title>Friendly</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@latest/dist/tailwind.min.css" rel="stylesheet">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Gupter:wght@400;500;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: "Gupter", serif;
            font-weight: 400;
            font-style: normal;
        }

        @media (max-width: 768px) {
            .sidebar {
                display: none;
            }

            .main-content {
                margin-left: 0;
            }

            .side {
                padding-top: 0%;
            }

            .card {
                width: 300px;
            }
        }
    </style>
</head>

<body class="bg-gray-100">

    <!-- Sidebar -->
    <%- include('../partials/side-bar') %>

        <!-- Main Content -->
        <main class="main-content ml-64 p-4">
            <!-- Header -->
            <%- include('../partials/header') %>

                <!-- Post Section -->
                <section class="container mx-auto px-12">
                    <div class="flex justify-center items-start min-h-screen ml-36">
                        <!-- Center Column: Single Post -->
                        <div class="flex flex-col space-y-9 max-w-5xl w-full">

                            <!-- Story Image -->
                            <div class="w-full flex justify-center">
                                <img src="/static/images/<%= story.media%>" alt="Story Image"
                                    class="w-[600px] h-[600px] rounded-lg object-cover">
                            </div>

                            <!-- Viewers Card -->
                            <div class="bg-white w-full p-6 rounded-lg shadow-lg">
                                <h2 class="text-xl font-bold mb-4">Görüntüleyenler : <%= story.viewers.length %>
                                </h2>
                                <ul class="space-y-6">
                                    <% story.viewers.forEach(function(viewer) { %>
                                        <li class="flex items-center space-x-4">
                                            <img src="/static/images/<%= viewer.profilePhoto %>" alt="User Photo"
                                                class="w-12 h-12 rounded-full">
                                            <div class="flex flex-col">
                                                <span class="font-bold"><%= viewer.name %></span>
                                                <span class="font-medium text-gray-500"><%= viewer.username %></span>
                                            </div>
                                        </li>
                                        
                                        <% }); %>
                                </ul>
                            </div>

                        </div>
                    </div>
                </section>
                </div>
        </main>

</body>



</html>